<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Works only on light theme-->
    <style name="Widget.App.MaskedCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
    </style>

    <!--    Custom Font goes here -->
    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        ...
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
        ...
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        ...
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        ...
    </style>
    <!--Toolbar styling goes here-->
    <style name="TextAppearance.App.ToolbarTitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:fontFamily">@font/hind_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.ToolbarTitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:fontFamily">@font/hind_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.ToolbarTitleLarge</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.ToolbarTitleMedium</item>
    </style>
    <!--Collapsing toolbar goes here-->
    <style name="Widget.App.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="contentScrim">@color/md_theme_light_primary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">48dp</item>
        <item name="expandedTitleMarginEnd">64dp</item>

    </style>
    <!--Chip global theme goes here -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/TextAppearance.App.BodyMedium.Chip</item>
        <item name="chipSpacingHorizontal">4dp</item>
        <item name="chipSpacingVertical">0dp</item>
        <item name="chipStrokeColor">@color/md_theme_light_surfaceTint</item>
    </style>

    <style name="TextAppearance.App.BodyMedium.Chip" parent="TextAppearance.Material3.BodyMedium">
        ...
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        ...
    </style>

    <!--    Tab theme global goes here -->
    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:fontFamily">@font/hind_font</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.LabelLarge</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
<!--        <item name="colorPrimary">@color/shrine_pink_100</item>-->
<!--        <item name="colorSecondary">@color/shrine_pink_100</item>-->
<!--        <item name="colorSurface">@color/shrine_pink_light</item>-->
<!--        <item name="colorOnSurface">@color/shrine_pink_900</item>-->
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Button.TextButton.Dialog</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>

    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:fontFamily">@font/hind_font</item>
        <item name="fontFamily">@font/hind_font</item>

    </style>

    <style name="MaterialAlertDialog.Button.TextButton.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/hind_font</item>
        <item name="fontFamily">@font/hind_font</item>
        <item name="android:paddingBottom">30dp</item>
    </style>


</resources>